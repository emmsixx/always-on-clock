{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Always On Clock",
  "version": "1.0.0",
  "identifier": "com.emmsixx.always-on-clock",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Clock",
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "width": 300,
        "height": 500
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
